<Window x:Class="TestWPFMailSender.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPFMailSender"
        mc:Ignorable="d"
        Title="" Height="200" Width="400" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Image Name="Img" Grid.Column="0" Grid.Row="0" Height="100" Width="100"/>
        <TextBlock Name="Message" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" 
                   Margin="5" Text="" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Name="OK" Grid.Column="2" Grid.Row="1" Content="OK" Margin="5" Click="OK_Click"/>
    </Grid>
</Window>
